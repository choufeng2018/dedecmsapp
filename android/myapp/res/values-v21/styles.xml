<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:statusBarColor">@color/default_dark_blue_color</item>
    </style>

    <!-- Topbar -->
    <style name="Topbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@drawable/topbar_bg</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>