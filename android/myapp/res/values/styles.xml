<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:windowAnimationStyle">@style/dialogAnimation</item>
    </style>
	
    <style name="dialogAnimation" parent="@android:style/Animation.Dialog">
         <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>
    
    <style name="activityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/slide_left_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/slide_left_in</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@drawable/button_color</item>
    </style>

    <style name="ButtonSmall" parent="Button">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="BaseItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:background">@drawable/select_item_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="BaseItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="BaseItemTitle" parent="BaseItemText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/default_light_grey_color</item>
    </style>

    <style name="SwitchButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseItemValue" parent="BaseItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/default_black_color</item>
        <item name="android:paddingLeft">30dp</item>
    </style>
    
    <!-- header -->
    <style name="PersonHeaderImage">
        <item name="android:src">@drawable/avatar_defalut</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
    
    <style name="PersonHeaderImageSmall" parent="PersonHeaderImage">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    
    <!-- Topbar -->
    <style name="Topbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@drawable/topbar_bg</item>
    </style>

    <style name="TopbarNoBackButton" parent="Topbar">
        <item name="com.lingganhezi.myapp:showBackButton">false</item>
    </style>

    <style name="TopbarTransparent" parent="Topbar">
        <item name="android:background">@null</item>
    </style>

    <style name="TopbarButton" parent="ButtonSmall">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_inverse_bg</item>
    </style>
    <!-- login\registe -->
    <style name="LoginEditor" parent="EditText">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="LoginButton" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoginFunction">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_light_grey_color</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Navbar -->
    <style name="NavIcon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="SilderPageTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/translucent_black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">@dimen/sliderPage_title_paddingTop</item>
        <item name="android:paddingLeft">@dimen/sliderPage_title_paddingLeft</item>
        <item name="android:paddingRight">@dimen/sliderPage_title_paddingRight</item>
        <item name="android:paddingBottom">@dimen/sliderPager_hieght</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- personal -->
    <style name="PersonalListItem" parent="BaseItem"></style>

    <style name="PersonalListItem_icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="PersonalListItem_title" parent="BaseItemText"></style>

    <style name="PersonalListItem_arrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/default_arrow</item>
    </style>

    <!-- 个人信息 -->
    <style name="PersonalInfoText" parent="BaseItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PersonalInfoTitle2Text" parent="PersonalInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="PersonalInfoListItemTitle" parent="BaseItemTitle"></style>

    <style name="PersonalInfoListItemValue" parent="BaseItemValue"></style>

    <style name="PersonalInfoListItem" parent="BaseItem"></style>

    <!-- 设置 -->
    <style name="SettingItem" parent="BaseItem"></style>

    <style name="SettingItemText" parent="BaseItemText"></style>

</resources>